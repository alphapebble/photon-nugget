# Solar Sage Environment Variables

# Environment (development, production)
SOLAR_SAGE_ENV=development

# Logging
SOLAR_SAGE_LOG_LEVEL=INFO

# API Server
SOLAR_SAGE_API_HOST=0.0.0.0
SOLAR_SAGE_API_PORT=8000

# UI
SOLAR_SAGE_UI_PORT=8502

# Data
SOLAR_SAGE_DATA_DIR=./data
SOLAR_SAGE_VECTOR_DB_PATH=./data/lancedb
SOLAR_SAGE_VECTOR_DB_TABLE=solar_knowledge

# Models
SOLAR_SAGE_EMBEDDING_MODEL=all-MiniLM-L6-v2
SOLAR_SAGE_LLM_PROVIDER=ollama
SOLAR_SAGE_LLM_MODEL=mistral

# External APIs
SOLAR_SAGE_OPENWEATHER_API_KEY=your_api_key_here

# Agent Configuration
SOLAR_SAGE_REQUIRE_AUTHORIZATION=true
SOLAR_SAGE_MAX_HISTORY_ITEMS=10
SOLAR_SAGE_USE_DUAL_AGENT=true
SOLAR_SAGE_MAX_CONTEXT_DOCUMENTS=5
SOLAR_SAGE_DEFAULT_CHUNK_STRATEGY=word_count_300_0
